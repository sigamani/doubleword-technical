FROM python:3.12-slim

WORKDIR /app

COPY requirements.dev ./

RUN pip install --no-cache-dir -r requirements.dev

COPY api/ ./api/
COPY pipeline/ ./pipeline/
COPY config.py ./

RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app

USER appuser

EXPOSE 8000

CMD ["python", "-m", "api.main"]